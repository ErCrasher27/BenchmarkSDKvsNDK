<resources>

    <style name="Screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_dark</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/element_margin</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/screen_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/element_margin</item>
        <item name="android:text">@string/go_to_benchmark</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:backgroundTint">@color/ndk_color</item>
        <item name="android:padding">@dimen/btn_padding</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="cardBackgroundColor">@color/element_dark</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- Home screen -->

    <style name="Recycler">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/element_margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <!-- Teaching cards -->

    <style name="CardIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:layout_margin">@dimen/card_element_margin</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">@dimen/card_element_margin</item>
    </style>

    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/card_content_text_size</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:layout_margin">@dimen/card_element_margin</item>
    </style>

    <!-- Benchmark screen -->

    <style name="Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/element_margin</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="LL">
        <item name="android:padding">@dimen/ll_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ResultLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="ResultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Statistics screen -->

    <style name="Statistics" parent="Screen" />

    <style name="Statistics.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Statistics.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/statistics_section_spacing</item>
        <item name="android:text">@string/statistics_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/statistics_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Statistics.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/element_margin</item>
        <item name="cardBackgroundColor">@color/element_dark</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="Statistics.CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>

    <style name="Statistics.CardContent.Centered">
        <item name="android:gravity">center</item>
    </style>

    <style name="Statistics.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/element_margin</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Statistics.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/card_content_text_size</item>
    </style>

    <style name="Statistics.SpeedupValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ndk_color</item>
        <item name="android:textSize">@dimen/statistics_speedup_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Statistics.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/statistics_progress_height</item>
        <item name="android:layout_marginBottom">@dimen/element_margin</item>
        <item name="android:max">100</item>
    </style>

    <style name="Statistics.Button" parent="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/element_margin</item>
    </style>

    <style name="Statistics.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
